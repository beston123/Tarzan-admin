## 一级二级菜单
#set($leftLevel1 = 'server')
#set($leftLevel2 = 1)

## 面包屑
#parse("include/breadcrumbs.vm")
#breadcrumbs(["/server/list",""],["服务端","服务端列表"])

## 主面板
<div class="row">
    <div class="col-xs-12">

        <!--h3 class="header smaller lighter blue">jQuery dataTables</h3-->

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            服务端－在线列表
        </div>

        <!-- div.table-responsive -->

        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="center">
                        <label class="pos-rel">
                            <span class="lbl">序号</span>
                        </label>
                    </th>
                    <th>IP:端口</th>
                    <th>服务端Id</th>
                    <th>Tarzan版本</th>
                    <th>权重</th>
                    <th>启动时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                </thead>

                <tbody>
                #foreach ($!{item} in $!{data})
                    <tr>
                        <td class="center">
                            $foreach.count
                        </td>
                        <td>$!{item.address}</td>
                        <td>$!{item.serverId}</td>
                        <td>$!viewUtils.getVersionName($!{item.version})</td>
                        <td>$!{item.weight}</td>
                        <td>$!datetool.format('yyyy/MM/dd HH:mm:ss',$!{item.createTime})</td>
                        <td>
                            #if($!{item.enable})
                                <span class="label label-sm label-success">已启用</span>
                            #else
                                <span class="label label-sm label-grey">已禁用</span>
                            #end
                        </td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                            #if($!{item.enable})
                                <a class="red" href="#" title="禁用">
                                    <i class="ace-icon fa fa-pause bigger-130"></i>
                                </a>
                            #else
                                <a class="green" href="#" title="启用">
                                    <i class="ace-icon fa fa-play bigger-130"></i>
                                </a>
                            #end
                                <a class="red" href="javascript:void(0)" title="健康检查" onclick="healthCheck('$!{item.address}')">
                                    <i class="ace-icon fa fa-heartbeat bigger-130"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                #end

                </tbody>
            </table>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->

#parse("commons/message.vm")

<script>

    //健康检查
    function healthCheck(address) {
        $.ajax({
            cache: true,
            type: "POST",
            url: "${ac.contextPath}/server/healthCheck",
            data: {address:address},
            async: false,
            error: function (request) {
                showErrorPopUp("操作超时！");
            },
            success: function (data) {
                var result = data;
                showPopUp(result.status, result.message);
            }
        });
    }
</script>