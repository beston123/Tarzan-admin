## 一级二级菜单
#set($leftLevel1 = 'message')
#set($leftLevel2 = 1)

## 面包屑
#parse("include/breadcrumbs.vm")
#breadcrumbs(["#",""],["消息管理","待确认事务"])

#parse("include/page.vm")

## 主面板
<div class="row">
    <div class="space-12"></div>

    <div class="col-sm-12">
        <form class="form-horizontal" action='${ac.contextPath}/message/queryToCheck' id="pagingForm" >
            <input type="hidden" id="pageNo" name="pageNo" value="$!{basePage.pageNo}">
            <div class="form-group">
                <label for="sourceTime" class="col-sm-1 control-label">来源时间:</label>
                <div class="col-sm-2" style="margin-left:-10px;">
                    <input type="date" class="form-control"  id="sourceTimeFrom" name="sourceTimeFrom"
                           value="$!datetool.format('yyyy-MM-dd',$!{query.sourceTimeFrom})" placeholder="">
                </div>
                <div class="col-sm-2" style="margin-left:-10px;">
                    <input type="date" class="form-control"  id="sourceTimeTo" name="sourceTimeTo"
                           value="$!datetool.format('yyyy-MM-dd',$!{query.sourceTimeTo})" placeholder="">
                </div>

                <div class="btn-group" style="margin-left: 5px">
                    <button type="button" class="btn btn-primary" onclick="return query();">查询</button>
                </div>
            </div>
        </form>
    </div><!-- ./col -->
</div><!-- ./row -->


<div class="row">
    <div class="col-xs-12">

        <!--h3 class="header smaller lighter blue">jQuery dataTables</h3-->

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            待确认事务
        </div>

        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="center">
                        <label class="pos-rel">
                            <span class="lbl">序号</span>
                        </label>
                    </th>
                    <th>事务Id</th>
                    <th>消息时间</th>
                    <th>重试次数</th>
                    <th>修改时间</th>
                    <th>操作</th>
                </tr>
                </thead>

                <tbody>
                    #foreach($!{item} in $!{list})
                    <tr>
                        <td class="center">
                            $foreach.count
                        </td>
                        <td><a href='${ac.contextPath}/message/rocketmq/query?tid=$!{item.tid}' >$!{item.tid}</a></td>
                        <td>$!datetool.format("yyyy-MM-dd HH:mm:ss", ${item.sourceTime})</td>
                        <td>$!{item.retryCount}</td>
                        <td>$!datetool.format("yyyy-MM-dd HH:mm:ss", ${item.modifyTime})</td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="red" href="javascript:void(0)" title="检查事务" onclick="checkTransaction('$!{item.tid}', '$!{item.mqType}')">
                                    <i class="ace-icon fa fa-check-circle-o bigger-130"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    #end

                </tbody>
            </table>
        </div>

        <div>
            #page($basePage, 'pagingForm', 'pageNo')
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->

#parse("commons/message.vm")

<script>

    function query(){
        if(checkFormat()){
            $('#pagingForm').submit();
        }
    }

    //格式检查
    function checkFormat() {

        return true;
    }

    //检查事务状态
    function checkTransaction(tid, mqType) {
        $.ajax({
            cache: true,
            type: "POST",
            url: "${ac.contextPath}/message/check/"+ tid +"/"+ mqType,
            data: null,
            async: false,
            error: function (request) {
                showErrorPopUp("操作超时！");
            },
            success: function (data) {
                var result = data;
                showPopUp(result.status, result.message);
            }
        });
    }
    
</script>